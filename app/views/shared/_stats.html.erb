<% @person ||= current_user %>
<div class="stats">
  <a href="<%= following_user_path(@person) %>">
    <strong id="following" class="stat">
      <%= @person.following.count %>
    </strong>
    following
  </a>
  <a href="<%= followers_user_path(@person) %>">
    <strong id="followers" class="stat">
      <%= @person.followers.count %>
    </strong>
    followers
  </a>
</div>